<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiefeng.ssm.dao.LoginAccountDao">

    <insert id="insertLoginAccount" useGeneratedKeys="true" keyProperty="id">
        insert into tb_login(username, password) values(#{username},#{password})
    </insert>


    <select id="getAccountByUsername" resultType="loginAccount">
        select id,username,password from tb_login where username = #{username}
    </select>


</mapper>