<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiefeng.ssm.dao.StudentMapper">
  <resultMap id="BaseResultMap" type="com.jiefeng.ssm.bean.Student">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="number" jdbcType="VARCHAR" property="number" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="department" jdbcType="VARCHAR" property="department" />
    <result column="student_class" jdbcType="VARCHAR" property="studentClass" />
    <association property="login" select="com.jiefeng.ssm.dao.LoginMapper.selectByPrimaryKey" column="login_id">
    </association>
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from tb_student
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.jiefeng.ssm.bean.Student">
    insert into tb_student (id, login_id, number, 
      name, department, student_class
      )
    values (#{id,jdbcType=INTEGER}, #{login.id,jdbcType=INTEGER}, #{number,jdbcType=VARCHAR},
      #{name,jdbcType=VARCHAR}, #{department,jdbcType=VARCHAR}, #{studentClass,jdbcType=VARCHAR}
      )
  </insert>

  <update id="updateByPrimaryKey" parameterType="com.jiefeng.ssm.bean.Student">
    update tb_student
    <trim prefix="set" suffixOverrides=",">
      <if test="login!= null">
        login_id = #{login.id},
      </if>
      <if test="number != null and number != ''">
        number = #{number},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="department != null and department != ''">
        department = #{department},
      </if>
      <if test="studentClass != null and studentClass != ''">
        student_class = #{studentClass},
      </if>
    </trim>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select id, login_id, number, name, department, student_class
    from tb_student
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, login_id, number, name, department, student_class
    from tb_student
  </select>

  <select id="getInfoByLoginId" resultType="student">
    select * from tb_student where login_id = #{id}
  </select>
</mapper>